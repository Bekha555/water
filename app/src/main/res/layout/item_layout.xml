<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="215dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/item_view">

        <TextView
            android:id="@+id/saved_check"
            android:layout_width="128dp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="225dp"

            android:layout_marginBottom="14dp"
            android:backgroundTint="@null"
            android:gravity="center"
            android:hint="Сумма"
            android:textColor="#000000"
            android:textSize="25sp"
            tools:ignore="RtlCompat">

        </TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="166dp"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@null"
            android:gravity="bottom"
            android:hint="Дата и время"
            android:textAlignment="center"
            android:textColor="#8C8C8C"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/water"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="203dp"
            android:layout_marginBottom="120dp"
            android:gravity="center"
            android:hint="Объём воды"
            android:textColor="#0094FF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="160dp"
            android:gravity="center"
            android:text="Использовано"
            android:textAlignment="center"
            android:textColor="#0094FF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="К оплате"
            android:textAlignment="center"
            android:textColor="#222"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="75dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="163dp"
            android:gravity="center"
            android:text="Категории"
            android:textAlignment="center"
            android:textColor="#0094FF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="83dp"
            android:gravity="center"
            android:hint="sections"
            android:textAlignment="center"
            android:textColor="#0094FF"
            android:textSize="15dp" />

    </RelativeLayout>
</FrameLayout>