<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HavPeople"
    android:background="#ffff">

    <ImageView
        android:id="@+id/havIcon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="540dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_houses" />

    <TextView
        android:id="@+id/havTextView"
        android:layout_width="256dp"
        android:layout_height="79dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="424dp"
        android:fontFamily="@font/rubik_light"
        android:text="Пожалуйста укажите количество людей"
        android:textAlignment="center"
        android:textColor="#0094FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/havIcon"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/havIcon"
        app:layout_constraintTop_toBottomOf="@+id/havIcon"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/havButton"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/peop_button"
        android:fontFamily="@font/rubik_light"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="#222"
        android:textSize="12sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/havEditText"
        app:layout_constraintStart_toEndOf="@+id/havEditText"
        app:layout_constraintTop_toTopOf="@+id/havEditText" />

    <EditText
        android:id="@+id/havEditText"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/input"
        android:ems="10"
        android:maxLength="2"
        android:hint="Количество"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/havTextView"
        app:layout_constraintStart_toStartOf="@+id/havTextView"
        app:layout_constraintTop_toBottomOf="@+id/havTextView" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/ic_back"
        android:stateListAnimator="@null"
        android:textAlignment="center"
        android:textColor="@color/mainbg"
        android:textSize="45sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>