<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".CalcInput">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_calc_icon" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="287dp"
        android:layout_height="106dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/calc_input_text1"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="165dp"
        android:layout_height="48dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rubik_light"
        android:hint="-  -  -  -"
        android:inputType="number"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

    <Button
        android:id="@+id/button17"
        android:layout_width="287dp"
        android:layout_height="48dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/blue_button"
        android:fontFamily="@font/rubik_light"
        android:text="Далее"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="155dp"
        android:layout_height="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumber3"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/editTextNumber3"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3"
        app:srcCompat="@drawable/ic_red_number" />


    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="305dp"
        android:background="@drawable/ic_back"
        android:stateListAnimator="@null"
        android:textAlignment="center"
        android:textColor="@color/mainbg"
        android:textSize="45sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>